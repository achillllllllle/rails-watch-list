<%# NAVBAR %>
<div class="d-flex justify-content-between items-align-center bg-secondary bg-gradient p-3">
  <div>
    <h1 class="text-white fw-bold fs-1">Lists</h1>
  </div>
  <div>
    <%= link_to "New list", new_list_path, class:"text-white fw-bolder fs-2 text-decoration-none" %>
  </div>
</div>

<%# GRID %>

<div class="row justify-content-around">
  <% @lists.each do |list| %>
    <div class="col-3 py-5 m-3 rounded border" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>') ; background-size: cover ; background-position: center ">
      <%= link_to "#{list.name}", list_path(list.id), class:"text-white flex-grow-1 fw-bold text-center fs-1 text-decoration-none" %>
    </div>
  <% end %>
</div>
